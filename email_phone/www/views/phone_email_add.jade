extends layout

block content
    h1 Add phone and email
    br
    ul.errors
        if errors
            each error, i in errors
                li.alert.alert-danger #{error.msg}
    form(method='post', action='/phoneemail/add')
        .form-group
            label Phone
            input.form-control(name='phone', type='text', placeholder='Enter Phone')
        .form-group
            label Email
            input.form-control(name='email', type='email', placeholder='Enter Email')
        input.btn.btn-default(name='submit', type='submit', values='Show phone')
